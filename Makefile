NAME = cube3d
CC = gcc
CFLAGS = -Wall -Wextra -Werror 
LDFLAGS = -Lmlx_linux -lmlx_Linux -L/usr/lib -lXext -lX11 -lm -lz
INCLUDES = -I/usr/include -Imlx_linux -O3

.PHONY: all configure_mlx

all: configure_mlx $(NAME) ascii_art

configure_mlx:
	@(cd mlx_linux && ./configure)

